<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_user_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liftersheaven.messaging.UserProfile">


    <android.support.v7.widget.Toolbar
        android:id="@+id/chatprofile_toolbar"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@drawable/space" />

    <ImageView
        android:id="@+id/user_avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/ic_profil"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@id/chatprofile_toolbar">




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/group_login"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/background_dark"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/update_editEmail"
                    android:hint="Enter Your Email"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:textColorHint="@android:color/background_dark">
                <EditText
                    android:id="@+id/update_editFullName"
                    android:hint="Enter Your Full Name"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/background_dark"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/update_editPhone"
                    android:hint="Phone Number"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/background_dark"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/update_editoldPassword"
                    android:hint="Enter Your Old Password"
                    android:inputType="textPassword"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_height="wrap_content"
                android:textColorHint="@android:color/background_dark"
                android:layout_width="match_parent">
                <EditText
                    android:id="@+id/update_editnewPassword"
                    android:hint="Enter Your New Password"
                    android:padding="5dp"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </android.support.design.widget.TextInputLayout>





        </LinearLayout>




        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/update"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/background_dark"
            android:text="Update"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_above="@+id/update_btnCancel"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginBottom="11dp" />

        <Button
            android:id="@+id/update_btnCancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_button_bg"
            android:text="Cancel"
            android:textColor="@android:color/background_dark"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/update"
            android:layout_alignLeft="@+id/update"/>


    </RelativeLayout>
</RelativeLayout>