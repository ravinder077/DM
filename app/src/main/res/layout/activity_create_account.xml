<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_create_account"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.liftersheaven.messaging.CreateAccount">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/blue"
        android:scaleType="fitXY"
        android:id="@+id/imageView"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DM"
        android:textSize="60sp"
        android:padding="20dp"
        android:textColor="@android:color/background_light"
        android:id="@+id/message"
        android:layout_marginBottom="51dp"
        android:layout_above="@+id/relativeLayout"
        android:layout_centerHorizontal="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_below="@+id/imageView"
        android:id="@+id/relativeLayout">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/background_dark"
        android:id="@+id/textInputLayout2"
        android:background="@android:color/background_light"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="17dp">

        <EditText
            android:id="@+id/sign_editLogin"
            android:hint="Username"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="37dp"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@android:color/background_dark"
        android:background="@android:color/background_light"
            android:layout_height="wrap_content"
        android:id="@+id/textInputLayout3"
        android:layout_below="@+id/textInputLayout2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" >
        <EditText
            android:id="@+id/sign_editPassword"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:textColorHint="@android:color/background_dark"
            android:layout_height="wrap_content"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textInputLayout3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textInputLayout5">
        <EditText
            android:id="@+id/main_editFullName"
            android:hint="Full Name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:id="@+id/main_btnCancel"
        android:textColor="@android:color/background_dark"
        android:text="Already have an account?"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="32dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/main_btnCreateA"
        android:background="@color/colorPrimary"
        android:textColor="@android:color/background_light"
        android:text="Create"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/textInputLayout5"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />





</RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="By signing up you accept DM's"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="7dp"
        android:id="@+id/textView4"
        android:layout_marginLeft="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="terms"
        android:layout_marginStart="6dp"
        android:textColor="@color/colorPrimary"
        android:textSize="12sp"
        android:id="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/textView4"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="and"
        android:textSize="12sp"
        android:layout_alignTop="@+id/textView5"
        android:layout_toEndOf="@+id/textView5"
        android:layout_marginStart="7dp"
        android:id="@+id/textView6"
        android:layout_toRightOf="@+id/textView5"
        android:layout_marginLeft="7dp" />

    <TextView
        android:layout_width="wrap_content"
        android:id="@+id/policy"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="privacy policy"
        android:textColor="@color/colorPrimary"
        android:layout_toRightOf="@+id/textView6"
        android:layout_marginStart="7dp"
        android:layout_marginLeft="7dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true" />
</RelativeLayout>
